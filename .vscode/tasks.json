{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build",
                "${workspaceFolder}/Foundatio.slnx",
                "/p:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "test",
                "${workspaceFolder}/Foundatio.slnx",
                "/p:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "pack",
            "command": "dotnet pack -c Release -o ${workspaceFolder}/artifacts",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "Start All Services",
            "command": "./start-all-services.ps1",
            "type": "shell",
            "presentation": {
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Stop All Services",
            "command": "./stop-all-services.ps1",
            "type": "shell",
            "presentation": {
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}