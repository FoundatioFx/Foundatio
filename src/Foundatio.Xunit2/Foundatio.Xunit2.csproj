<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>Foundatio.Xunit2</PackageId>
    <Description>xUnit v2 test utilities for Foundatio including test logging and retry attributes. Use this package for projects still on xUnit v2. For xUnit v3, use Foundatio.Xunit instead.</Description>
    <PackageTags>$(PackageTags);Logging;Log;Xunit;Xunit2;Retry</PackageTags>
    <IsTestProject>false</IsTestProject>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Foundatio\Foundatio.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0" />
    <PackageReference Include="xunit" Version="2.9.3" />
  </ItemGroup>
  <ItemGroup Condition="!$([MSBuild]::IsTargetFrameworkCompatible('$(TargetFramework)', 'net6.0'))">
    <PackageReference Include="System.Collections.Immutable" Version="8.0" />
  </ItemGroup>
</Project>
