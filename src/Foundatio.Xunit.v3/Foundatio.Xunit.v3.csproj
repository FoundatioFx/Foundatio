<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Description>xUnit v3 test utilities for Foundatio including test logging. For projects still on xUnit v2, use Foundatio.Xunit instead.</Description>
    <PackageTags>$(PackageTags);Logging;Log;Xunit;Retry</PackageTags>
    <IsTestProject>false</IsTestProject>
    <RootNamespace>Foundatio.Xunit</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Foundatio\Foundatio.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="10.0.1" />
    <PackageReference Include="xunit.v3.assert" Version="3.2.1" />
    <PackageReference Include="xunit.v3.extensibility.core" Version="3.2.1" />
  </ItemGroup>
</Project>
